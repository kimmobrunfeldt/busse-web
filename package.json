{
  "name": "busse-web",
  "version": "1.0.0",
  "description": "Busse web application",
  "main": "index.js",
  "author": "",
  "license": "-",
  "dependencies": {
    "arr-mutations": "^0.1.2",
    "bluebird": "^2.10.1",
    "compression": "^1.5.2",
    "express": "^4.13.3",
    "history": "^1.11.0",
    "immutable": "^3.7.5",
    "lodash": "^3.10.1",
    "morgan": "^1.6.1",
    "react": "^0.13.3",
    "react-redux": "^3.0.0",
    "react-router": "^1.0.0-rc1",
    "redux": "^3.0.2",
    "redux-logger": "^2.0.0",
    "redux-thunk": "^1.0.0",
    "superagent": "^1.4.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.1",
    "babel-jscs": "^2.0.4",
    "babelify": "^6.3.0",
    "browserify": "^11.0.1",
    "chokidar-cli": "^1.0.1",
    "concurrently": "^0.1.1",
    "eslint": "^1.3.1",
    "eslint-plugin-react": "^3.3.1",
    "http-server": "^0.8.0",
    "jscs": "^2.1.1",
    "less": "^2.5.1",
    "less-plugin-glob": "^1.1.0",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  },
  "scripts": {
    "start": "./tools/tmux",
    "serve": "babel-node ./tools/server.js",
    "watch": "concurrent -p command 'npm run serve' 'npm run watch-js' 'npm run watch-less'",
    "watch-js": "watchify ./src/scripts/main.js -t babelify -d -o ./src/bundle.js -v",
    "watch-less": "npm run build-less && chokidar '**/*.less' './src/styles/**/*.css' -c 'npm run build-less'",
    "build": "npm run build-js && npm run build-styles",
    "build-js": "NODE_ENV=production browserify ./src/scripts/main.js -t babelify -o ./src/bundle.js && npm run minify-js",
    "build-styles": "npm run build-styles-dev && npm run minify-css",
    "build-styles-dev": "npm run build-less && npm run postcss",
    "build-less": "lessc --glob ./src/styles/main.less ./src/bundle.css",
    "postcss": "postcss --use autoprefixer ./src/bundle.css -o ./src/bundle.css",
    "minify-js": "uglifyjs ./src/bundle.js -o ./src/bundle.js",
    "minify-css": "cleancss --skip-aggressive-merging --skip-restructuring ./src/bundle.css -o ./src/bundle.css",
    "lint": "npm run jscs && npm run eslint",
    "jscs": "jscs ./src",
    "eslint": "eslint --ext .js ./src"
  }
}
